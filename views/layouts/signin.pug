doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Sign in Â· Twitter Bootstrap
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(href='/css/bootstrap.css', rel='stylesheet')
    link(href='/css/bootstrap-social.css', rel='stylesheet')
    style(type='text/css').
      body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
      margin-top: 10px;
      }
      .form-signin {
      max-width: 300px;
      padding: 19px 29px 29px;
      margin: 0 auto 20px;
      background-color: #fff;
      border: 1px solid #e5e5e5;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
      -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
      box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
      margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
      font-size: 16px;
      height: auto;
      margin-bottom: 15px;
      padding: 7px 9px;
      }
      .btn.btn-large.btn-primary{
      margin-right: 50px
      }

      .btn.btn-large.btn-success {
        margin-left: 50px
      }
      #github-login {
        margin-top: 10px;
      }
    link(href='/css/bootstrap-responsive.css', rel='stylesheet')
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/ico/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/ico/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/ico/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', href='/ico/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='/ico/favicon.png')
  body
    include ../partials/navar
    .container
      form.form-signin(action='/auth/signin' method='post')
        h2.form-signin-heading Please sign in
        include ../partials/messages
        input.input-block-level(type='email', name='email'  placeholder='Email address')
        input.input-block-level(type='password', name='password' placeholder='Password')
        label.checkbox
          input(type='checkbox', value='remember-me')
          | Remember me
        button.btn.btn-large.btn-primary(type='submit') Sign in
        a.btn.btn-large.btn-success(href='/auth/signup') Sign up
        a.btn.btn-block.btn-social.btn-github(href='/auth/github-login' id='github-login') GitHub Login
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  include ../partials/scripts
